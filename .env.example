# Required
ANTHROPIC_API_KEY=sk-ant-...

# Neo4j (used by API server and dev mode)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=memory-system

# Redis (used by API server, agents, and event bus)
REDIS_URL=redis://localhost:6379

# Logging (path to JSON dictConfig file; default: logging.json)
# LOG_CONFIG=logging.debug-agents.json

# LLM
LLM_MODEL=claude-sonnet-4-20250514

# Distributed mode (used by standalone agents and CLI)
API_BASE_URL=http://localhost:8000
POLL_INTERVAL=30
